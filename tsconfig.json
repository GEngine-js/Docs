{
  "compilerOptions": {
    // "allowJs": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,

    "moduleResolution": "node",

    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,

    "strict": true,

    "baseUrl": ".",
    "paths": {
      "@/*":["src/*"]
    }
    // "suppressImplicitAnyIndexErrors": true,
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", ".vitepress/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
